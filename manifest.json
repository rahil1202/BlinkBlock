{
  "manifest_version": 3,
  "name": "EyeCare Focus",
  "version": "1.0.0",
  "description": "Eye care reminders and focus tracking with website blocking",
"permissions": [
  "storage", "notifications", "tabs", "activeTab", "idle",
  "declarativeNetRequest", "declarativeNetRequestFeedback", "alarms"
],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_popup": "popup.html", "default_title": "EyeCare Focus" },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon.jpeg"
  },
  "web_accessible_resources": [
    { "resources": ["focus-mode.html"], "matches": ["<all_urls>"] }
  ]
}